
class punkt {
	int eintrag;
	punkt next;
}

void add(punkt p, int n) {
	while(p.next)
		p = p.next;
	punkt neu = new punkt;
	neu.eintrag = n;
	neu.next = null;
	p.next = neu;
}

void print(punkt p) {
	while(p.next) {
		p = p.next;
		p.eintrag;
	}
}

void removestart(punkt p, int i) {
	for (int k = 0; k < i; k++;)
		p.next = p.next.next;
}

void main() {
	punkt list = new punkt;
	list.next = null;
	for (int i = -10; i != 10; i++;)
		add(list, i);
	removestart(list, 3);
	print(list);
}
